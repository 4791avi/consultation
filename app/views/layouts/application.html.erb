<!DOCTYPE html>
<html>
  <head>
    <title>Consultation</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<div class="topnav">
  <a class = "active" style="font-size:25px;">CONSULTATION</a>

  <%if user_signed_in?%>
    <a><%= link_to "Logout", destroy_user_session_path, method: :delete   %></a>
  <%else%>
    <a><%= link_to "sign in", new_user_session_path %></a>
    <a><%= link_to "sign up", new_user_registration_path %></a>
  <%end%>

</div>
  <body>
        <% if notice %>
           <p class="alert alert-success" id ="notice"><%= notice %></p>
         <%end%>
         <% if alert %>
           <p class="alert alert-danger" id ="flash"><%= alert %></p>
         <%end%>
         <% if !user_signed_in? %>
           <br>
         <%end%>
    <%= yield %>
  </body>
</html>


<script > 
  
  $(document).ready(function () {   
    setTimeout(function () {   
      $('#flash').remove();  
      $('#notice').remove();
    }, 4000); 
  });
</script>